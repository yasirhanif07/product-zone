<div class="main-body">
  <nav class="sidebar">
    <div class="accordion" id="category-accordion">
      <% Category.all.each do |category| %>
        <div class="accordian-item">
          <h2 class="accordion-header" id="heading<%=category.id%>">
            <button class="accordion-button px-0" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= category.id%>" aria-expanded="true" aria-controls="collapse<%= category.id%>">
              <div class="w-100 d-flex align-items-center justify-content-between">
                <div class="name">
                  <i class="fa fa-angle-right me-3"></i>
                  <span><%= category.name %></span>
                </div>
                <div class="counting">
                  <span><%= category&.subcategories&.count %></span>
                </div>
              </div>
            </button>
          </h2>
          <div id="collapse<%=category.id%>" class="accordion-collapse collapse" aria-labelledby="heading<%=category.id%>" data-bs-parent="#category-accordion">
            <div class="accordion-body pe-0">
              <div class="accordion" id="subcategory-accordion">
                <% category&.subcategories&.each do |subcategory| %>
                  <div class="accordion-item border-0">
                    <h2 class="accordion-header" id="subcategory<%= subcategory.id%>headingTwo">
                      <button class="accordion-button px-0" type="button" data-bs-toggle="collapse"
                        data-bs-target="#subcategory<%= subcategory.id%>collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
                        <div class="w-100 d-flex align-items-center justify-content-between">
                          <div class="name">
                            <i class="fa fa-angle-right me-3"></i>
                            <span><%= subcategory.name %></span>
                          </div>
                          <div class="counting">
                            <span><%= subcategory.brands&.count %></span>
                          </div>
                        </div>
                      </button>
                    </h2>
                    <div id="subcategory<%= subcategory.id%>collapseTwo" class="accordion-collapse collapse sub3-collapsetwo " aria-labelledby="sub-heading<%= subcategory.id %>" data-bs-parent="#subcategory-accordion">
                      <% subcategory&.brands&.each do |brand| %>
                        <div class="accordion-body p-0">
                          <ul class="list-unstyled collapsetwo-list m-0">
                            <li>
                              <div class="w-100 d-flex align-items-center justify-content-between">
                                <div class="name">
                                  <i class="fa fa-angle-right me-3"></i>
                                  <span>
                                    <%= link_to brand.name, search_by_brand_products_path(brand_id: brand&.id), remote: true, class: 'text-decoration-none' %>
                                  </span>
                                </div>
                                <div class="sub-counting">
                                  <span><%= brand&.products&.count %></span>
                                </div>
                              </div>
                            </li>
                          </ul>
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </nav>
</div>
