<div class="product-show">
  <div class="background-img">
    <div class="iframe">
      <iframe class="d-flex align-items-center justify-content-center border-0" src="<%= @url %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
    <div class="footer">
       <div class="link-tags">
         <% @product&.tags.each do |tag| %>
           <%= link_to tag.name, search_by_tag_products_path(tag_id: tag.id) %>
         <% end %>
      </div>
      <h2 class="footer-heading"><%= @product.name %></h2>
      <div class="row w-100 m-0">
        <div class="col px-0">
          <div class="twitter-share align-items-center text-center">
            <%= link_to twitter_sharing_url(@product), class: 'text-decoration-none text-white fs-6', target: '_blank' do %>
              <div class="d-flex align-items-center justify-content-center">
                <div class="icon">
                  <i class="fab fa-twitter"></i>
                  <span class="progression-single-dash">–</span>
                </div>
                <div class="icon d-flex align-items-center justify-content-center">
                  <span class="d-block">Share</span>
                  <span class="d-lg-block d-none ms-1">on twitter</span>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <div class="col px-0">
          <div class="facebook-share align-items-center text-center">
            <%= link_to facebook_sharing_url(@product), class: 'text-decoration-none text-white fs-6', target: '_blank' do %>
              <div class="d-flex align-items-center justify-content-center">
                <div class="icon">
                  <i class="fab fa-facebook-f"></i>
                  <span class="progression-single-dash">–</span>
                </div>
                <div class="icon d-flex align-items-center justify-content-center">
                  <span class="d-block">Share</span>
                  <span class="d-lg-block d-none ms-1">on Facebook</span>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <div class="col px-0">
          <div class="email-share align-items-center text-center">
            <%= link_to share_with_email(@product), class: 'text-decoration-none text-white fs-6' do %>
              <div class="d-flex align-items-center justify-content-center">
                <div class="icon">
                  <i class="far fa-envelope"></i>
                  <span class="progression-single-dash">–</span>
                </div>
                <div class="icon d-flex align-items-center justify-content-center">
                  <span class="d-block">Share</span>
                  <span class="d-lg-block d-none ms-1">on Email</span>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>