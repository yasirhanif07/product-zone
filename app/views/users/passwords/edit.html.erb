<div class="custom-form">
  <div class="container">
    <div class="row">
      <div class="col-lg-4 col-md-6 mx-auto" style="padding-top: 120px;">
          <h2 class="text-center mb-5">Change your password</h2>
          <div class="tab-content">
            <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
            <form>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <%= f.hidden_field :reset_password_token %>

              <div class="field mb-4">
                <%= f.label :password, "New password",class:"form-label " %><br />
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em><br />
                <% end %>
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password",class:"form-control" %>
              </div>

              <div class="field mb-4">
                <%= f.label :password_confirmation, "Confirm new password",class:"form-label" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control" %>
              </div>

               <div class="actions">
                <div class="d-flex justify-content-center">
                <%= f.submit "Change my password" ,class:"btn btn-primary mb-4" %>
              </div>
              </div>

              
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
    

            <% end %>

            <%= render "devise/shared/links" %>
