<div class="page-content">
  <div class="mb-5 d-flex align-items-center justify-content-between">
    <h1>Static Pages</h1>
    <%= link_to 'New Static Page', new_admin_static_page_path, class: 'btn btn-primary' %>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped">
        <thead>
        <tr>
          <th>Name</th>
          <th>Content </th>
          <th>Action</th>
        </tr>
        </thead>
        <tbody>
        <% @static_pages.each do |static_page| %>
          <tr>
            <td><%= static_page.name%></td>
            <td><%=static_page.content&.truncate(40) %></td>
            <td class="tr-space">
              <%= link_to 'Show', admin_static_page_path(static_page), class: 'action_btn p-1 btn btn-success' %>
              <%= link_to 'Edit', edit_admin_static_page_path(static_page), class: 'action_btn p-1 btn btn-secondary' %>
              <%= link_to 'Delete', admin_static_page_path(static_page), method: :delete, data: { confirm: 'Are you sure?' }, class: 'action_btn danger p-1 btn btn-danger' %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
