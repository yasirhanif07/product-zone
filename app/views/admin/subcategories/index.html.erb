<div class="page-content">
  <div class="mb-5 d-flex align-items-center justify-content-between">
    <h1>Subcategories</h1>
    <%= link_to 'New subcategory', new_admin_subcategory_path, class: 'btn btn-primary' %>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped">
        <thead>
        <tr>
          <th>Name</th>
          <th>Description </th>
          <th>Action</th>
        </tr>
        </thead>
        <tbody>
        <% @subcategories.each do |subcategory| %>
          <tr>
            <td><%= subcategory.name%></td>
            <td><%=subcategory.description&.truncate(40) %></td>
            <td class="tr-space">
              <%= link_to 'Show', admin_subcategory_path(subcategory), class: 'action_btn p-1 btn btn-success' %>
              <%= link_to 'Edit', edit_admin_subcategory_path(subcategory), class: 'action_btn p-1 btn btn-secondary' %>
              <%= link_to 'Delete', admin_subcategory_path(subcategory), method: :delete, data: { confirm: 'Are you sure?' }, class: 'action_btn danger p-1 btn btn-danger' %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
