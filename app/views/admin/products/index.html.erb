<div class="page-content">
  <div class="mb-5 d-flex align-items-center justify-content-between">
    <h1>Products</h1>
    <%= link_to 'New Product', new_admin_product_path, class: 'btn btn-primary' %>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name </th>
            <th>Description </th>
            <th>View Count </th>
            <th>Image </th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.name%></td>
              <td><%= product.description&.truncate(40) %></td>
              <td><%= product.viewed_count || 0 %></td>
              <td>
                <% if product.image.present? %>
                <%= image_tag image_url(product.image), size:"120x60" %>
                <% end %>
              </td>
              <td class="tr-space">
                <%= link_to 'Show', admin_product_path(product), class: 'action_btn p-1 btn btn-success' %>
                <%= link_to 'Edit', edit_admin_product_path(product), class: 'action_btn p-1 btn btn-secondary' %>
                <%= link_to 'Delete', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: 'action_btn danger p-1 btn btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
