<% if @product.new_record? %>
  Brand<%= select_tag 'product[brand_id]', include_blank: 'Select a Brand', class: 'select_brand' %>
<% else %>
  Brand<%= select_tag 'product[brand_id]', options_for_select(@brands.map{ |brand| [ brand.name, brand.id ] },@product.brand.id), include_blank: 'Select a Brand', class: 'select_brand'  %>
<%end %>
