<div class="page-content">
  <div class="row d-flex justify-content-center align-items-center">
    <div class="col-md-12 mx-auto">
      <div class="card-header d-flex align-items-center justify-content-between">
        <h2 class="text-center my-3"><%= @category.name %></h2>
        <span>
          <%= link_to 'Back', admin_categories_path,class:'btn btn-primary' %>
          <%= link_to 'Edit', edit_admin_category_path(@category),class:'btn btn-primary' %>
        </span>
      </div>
      <div class="card-body bg-light">
        <div class="first-name d-flex align-items-center mt-4 justify-content-start">
          <span class="mx-2 w-15">Name</span>
          <span class="mx-2"><%= @category.name %></span>
        </div>
        <div class="last-name d-flex align-items-center mt-4 justify-content-start">
          <span class="mx-2 w-15">Description</span>
          <span class="mx-2"><%= @category.description %></span>
        </div>
      </div>
    </div>
  </div>
</div>