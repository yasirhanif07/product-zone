<div class="row d-flex justify-content-center align-items-center">
  <div class="col-md-4 mx-auto">
    <div class="custom-form">
      <%= form_with model: [:admin, @category] do |form| %>
        <% if @category.errors.any? %>
          <%= render 'shared/error_messages', instance: @category %>
        <% end %>
        <div class="name my-3">
          <%= form.label :name, class: 'my-2' %>
          <%= form.text_field :name, class:'form-control' %>
        </div>
        <div class="description my-3">
          <%= form.label :description, class: 'my-2' %>
          <%= form.text_area :description, class:'form-control' %>
        <div class="button my-3">
          <%= form.submit class: 'btn btn-primary'%>
          <%= link_to 'Back', admin_categories_path,class:'btn btn-secondary mx-2' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
