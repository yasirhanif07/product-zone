<div class="page-content">
  <div class="mb-5 d-flex align-items-center justify-content-between">
    <h1>Brands</h1>
    <%= link_to 'New Brand', new_admin_brand_path, class: 'btn btn-primary' %>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description </th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @brands.each do |brand| %>
            <tr>
              <td><%= brand.name%></td>
              <td><%= brand.description&.truncate(40) %></td>
              <td class="tr-space">
                <%= link_to 'Show', admin_brand_path(brand), class: 'action_btn p-1 btn btn-success' %>
                <%= link_to 'Edit', edit_admin_brand_path(brand), class: 'action_btn p-1 btn btn-secondary' %>
                <%= link_to 'Delete', admin_brand_path(brand), method: :delete, data: { confirm: 'Are you sure?' }, class: 'action_btn danger p-1 btn btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
